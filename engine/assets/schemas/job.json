{
  "name": "Job",
  "title": "Job",
  "type": "object",
  "modes": ["colony", "roguelike"],
  "properties": {
    "job_type": { "type": "string" },
    "category": {
      "type": "string",
      "description": "Job category, e.g. hauling, construction, crafting"
    },
    "target": { "type": "integer" },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "complete",
        "failed",
        "cancelled",
        "blocked"
      ]
    },
    "phase": {
      "type": "string",
      "enum": [
        "pending",
        "fetching_resources",
        "delivering_resources",
        "going_to_site",
        "en_route",
        "at_site",
        "in_progress",
        "complete",
        "failed",
        "cancelled",
        "blocked"
      ],
      "default": "pending",
      "description": "Current execution phase of the job"
    },
    "progress": { "type": "number", "minimum": 0 },
    "assigned_to": {
      "type": "integer",
      "description": "Entity ID assigned to this job"
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "description": "Higher value means higher priority"
    },
    "resource_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources required to start this job"
    },
    "reserved_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources reserved for this job"
    },
    "reserved_stockpile": {
      "type": "integer",
      "description": "Stockpile entity ID from which resources are reserved"
    },
    "delivered_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources delivered so far"
    },
    "delivery_status": {
      "type": "string",
      "enum": ["none", "partial", "complete"],
      "default": "none"
    },
    "children": {
      "type": "array",
      "items": { "$ref": "#" },
      "description": "Subtasks of this job"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs or references of prerequisite jobs"
    },
    "cancelled": { "type": "boolean", "default": false },
    "applied_effects": {
      "type": "array",
      "items": { "type": "integer" },
      "description": "Indices of effects that have been applied; enables rollback on cancel/failure.",
      "default": []
    },
    "assignment_count": {
      "type": "integer",
      "default": 0,
      "description": "How many times this job has been assigned to any agent."
    },
    "last_assigned_tick": {
      "type": "integer",
      "default": 0,
      "description": "Game tick when this job was last assigned."
    },
    "target_position": {
      "type": "object",
      "properties": {
        "pos": {
          "type": "object",
          "properties": {
            "Square": {
              "type": "object",
              "properties": {
                "x": { "type": "integer" },
                "y": { "type": "integer" },
                "z": { "type": "integer" }
              },
              "required": ["x", "y", "z"]
            }
          }
        }
      }
    }
  },
  "required": ["job_type", "status", "category"]
}
