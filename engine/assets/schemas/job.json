{
  "name": "Job",
  "title": "Job",
  "type": "object",
  "modes": ["colony", "roguelike"],
  "properties": {
    "job_type": { "type": "string" },
    "target": { "type": "integer" },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "complete", "failed", "cancelled"]
    },
    "progress": { "type": "number", "minimum": 0 },
    "assigned_to": {
      "type": "integer",
      "description": "Entity ID assigned to this job"
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "description": "Higher value means higher priority"
    },
    "resource_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources required to start this job"
    },
    "resource_outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources produced by this job"
    },
    "children": {
      "type": "array",
      "items": { "$ref": "#" },
      "description": "Subtasks of this job"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs or references of prerequisite jobs"
    },
    "cancelled": { "type": "boolean", "default": false }
  },
  "required": ["job_type", "status"]
}
