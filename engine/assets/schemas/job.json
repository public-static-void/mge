{
  "name": "Job",
  "title": "Job",
  "type": "object",
  "modes": ["colony", "roguelike"],
  "properties": {
    "job_type": { "type": "string" },
    "category": {
      "type": "string",
      "description": "Job category, e.g. hauling, construction, crafting"
    },
    "target": { "type": ["integer", "null"] },
    "state": {
      "type": "string",
      "enum": [
        "pending",
        "fetching_resources",
        "delivering_resources",
        "going_to_site",
        "en_route",
        "at_site",
        "in_progress",
        "complete",
        "failed",
        "cancelled",
        "blocked",
        "waiting_for_resources",
        "paused",
        "interrupted"
      ],
      "default": "pending",
      "description": "Current execution phase of the job"
    },
    "progress": { "type": "number", "minimum": 0 },
    "assigned_to": {
      "type": ["integer", "null"],
      "description": "Entity ID assigned to this job"
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "description": "Higher value means higher priority"
    },
    "resource_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources required to start this job"
    },
    "reserved_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources reserved for this job"
    },
    "reserved_stockpile": {
      "type": ["integer", "null"],
      "description": "Stockpile entity ID from which resources are reserved"
    },
    "delivered_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources delivered so far"
    },
    "delivery_status": {
      "type": "string",
      "enum": ["none", "partial", "complete"],
      "default": "none"
    },
    "children": {
      "type": "array",
      "items": { "$ref": "#" },
      "description": "Subtasks of this job"
    },
    "dependencies": {
      "description": "Prerequisite jobs or world/entity conditions. Supports AND/OR/NOT/world/entity-state.",
      "oneOf": [
        {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "$ref": "#/definitions/DependencyExpr" }
            ]
          }
        },
        { "$ref": "#/definitions/DependencyExpr" }
      ]
    },
    "applied_effects": {
      "type": "array",
      "items": { "type": "integer" },
      "description": "Indices of effects that have been applied; enables rollback on cancel/failure.",
      "default": []
    },
    "assignment_count": {
      "type": "integer",
      "default": 0,
      "description": "How many times this job has been assigned to any agent."
    },
    "last_assigned_tick": {
      "type": "integer",
      "default": 0,
      "description": "Game tick when this job was last assigned."
    },
    "target_position": {
      "type": ["object", "null"],
      "properties": {
        "pos": {
          "type": "object",
          "properties": {
            "Square": {
              "type": "object",
              "properties": {
                "x": { "type": "integer" },
                "y": { "type": "integer" },
                "z": { "type": "integer" }
              },
              "required": ["x", "y", "z"]
            }
          }
        }
      }
    }
  },
  "required": ["job_type", "state", "category"],
  "definitions": {
    "DependencyExpr": {
      "type": "object",
      "properties": {
        "all_of": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "$ref": "#/definitions/DependencyExpr" }
            ]
          }
        },
        "any_of": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "$ref": "#/definitions/DependencyExpr" }
            ]
          }
        },
        "not": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              { "$ref": "#/definitions/DependencyExpr" }
            ]
          }
        },
        "world_state": {
          "type": "object",
          "properties": {
            "resource": { "type": "string" },
            "gte": { "type": "number" },
            "lte": { "type": "number" }
          }
        },
        "entity_state": {
          "type": "object",
          "properties": {
            "entity": { "type": "integer" },
            "component": { "type": "string" },
            "field": { "type": "string" },
            "gte": { "type": "number" },
            "lte": { "type": "number" }
          }
        }
      }
    }
  }
}
