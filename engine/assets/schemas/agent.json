{
  "name": "Agent",
  "title": "Agent",
  "type": "object",
  "modes": ["colony", "roguelike"],
  "properties": {
    "entity_id": { "type": "integer" },
    "specializations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of job categories this agent specializes in"
    },
    "skills": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "preferences": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "current_job": { "type": "integer" },
    "job_queue": {
      "type": "array",
      "items": { "type": "integer" },
      "description": "Queue of job entity IDs"
    },
    "stamina": { "type": "number", "default": 100 },
    "morale": { "type": "number", "default": 100 },
    "state": {
      "type": "string",
      "enum": ["idle", "working", "resting", "unavailable"],
      "default": "idle"
    },
    "jobs_completed": {
      "type": "integer",
      "default": 0,
      "description": "How many jobs this agent has completed (for fairness/round-robin)."
    },
    "move_path": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Square": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "z": { "type": "integer" }
            },
            "required": ["x", "y", "z"]
          }
        },
        "required": ["Square"]
      },
      "description": "Path (list of positions) the agent will follow to reach a target."
    },
    "carried_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources currently carried by this agent"
    }
  },
  "required": ["entity_id"]
}
