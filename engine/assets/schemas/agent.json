{
  "name": "Agent",
  "title": "Agent",
  "type": "object",
  "modes": ["colony", "roguelike"],
  "properties": {
    "entity_id": { "type": "integer" },

    "specializations": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "List of job categories this agent specializes in",
      "default": []
    },

    "skills": {
      "type": ["object", "null"],
      "additionalProperties": { "type": "number" },
      "default": {}
    },

    "preferences": {
      "type": ["object", "null"],
      "additionalProperties": { "type": "number" },
      "default": {}
    },

    "current_job": {
      "type": ["integer", "null"],
      "default": null
    },

    "job_queue": {
      "type": ["array", "null"],
      "items": { "type": "integer" },
      "description": "Queue of job entity IDs",
      "default": []
    },

    "stamina": {
      "type": ["number", "null"],
      "default": 100,
      "description": "Stamina points"
    },

    "morale": {
      "type": ["number", "null"],
      "default": 100,
      "description": "Morale points"
    },

    "state": {
      "type": ["string", "null"],
      "enum": ["idle", "working", "resting", "unavailable"],
      "default": "idle"
    },

    "jobs_completed": {
      "type": ["integer", "null"],
      "default": 0,
      "description": "How many jobs this agent has completed (for fairness/round-robin)."
    },

    "move_path": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "properties": {
          "Square": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "z": { "type": "integer" }
            },
            "required": ["x", "y", "z"]
          }
        },
        "required": ["Square"]
      },
      "description": "Path (list of positions) the agent will follow to reach a target.",
      "default": []
    },

    "carried_resources": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "amount": { "type": "integer" }
        },
        "required": ["kind", "amount"]
      },
      "description": "Resources currently carried by this agent",
      "default": []
    }
  },
  "required": ["entity_id"]
}
